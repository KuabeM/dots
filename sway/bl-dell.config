
### Output configuration
#
# Default wallpaper (more resolutions are available in /usr/share/backgrounds/sway/)
#output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill
output * bg ~/Pictures/bl_wallpaper.jpg fill

#
# Example configuration:
#
#   output HDMI-A-1 resolution 1920x1080 position 1920,0
#
# You can get the names of your outputs by running: swaymsg -t get_outputs
# Laptop and two screens
output eDP-1 pos 0 0 scale 2.0
output DP-5 pos 1920 0
output DP-6 pos 3840 0

# Built-in Touchpad
input "1267:12572:VEN_04F3:00_04F3:311C_Touchpad" {
    tap enabled
    natural_scroll enabled
    dwt enabled
    # middle_emulation enabled
    tap_button_map lrm
    pointer_accel 0.7
    accel_profile adaptive
    scroll_factor 1.5
}

# exec_always "/usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1"
exec gnome-keyring-daemon --replace --daemonize --components=ssh,pcks11,secrets

# fix flatpak icons/mouse
exec_always flatpak --user override --filesystem=/home/korbinian/.icons/:ro && \
    flatpak --user override --filesystem=/usr/share/icons/:ro

exec /usr/lib/x86_64-linux-gnu/libexec/polkit-kde-authentication-agent-1
